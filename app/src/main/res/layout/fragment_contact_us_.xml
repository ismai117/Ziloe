<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".view.fragments.contact.ContactUs_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:textSize="24sp"
        android:id="@+id/contact_header"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Contact Us" />

        <TextView
            android:id="@+id/line_mark"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_below="@id/contact_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#000000" />


        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@id/line_mark"
            android:orientation="vertical"
            android:id="@+id/name_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="Name"
                android:layout_width="match_parent"
                android:maxHeight="200dp"
                android:textSize="18sp"
                android:background="@drawable/ts"
                android:layout_height="45dp"
                android:id="@+id/contactName_input"/>



            <EditText
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="Email"
                android:layout_width="match_parent"
                android:maxHeight="200dp"
                android:textSize="18sp"
                android:background="@drawable/ts"
                android:layout_height="45dp"
                android:id="@+id/contactEmail_input"/>



            <EditText
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="Phone"
                android:layout_width="match_parent"
                android:maxHeight="200dp"
                android:textSize="18sp"
                android:background="@drawable/ts"
                android:layout_height="45dp"
                android:id="@+id/contactPhone_input"/>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_height="200dp">

                    <EditText
                        android:padding="5dp"
                        android:hint="Comment"
                        android:layout_width="match_parent"
                        android:maxHeight="200dp"
                        android:textSize="18sp"
                        android:background="@drawable/ts"
                        android:layout_height="wrap_content"
                        android:id="@+id/contactComment_input"/>


            </LinearLayout>


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_below="@id/name_email_layout"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="SEND"
            android:id="@+id/send_messageBtn"
            android:background="#000000"
            android:textColor="#ffffff"/>

    </RelativeLayout>

    </ScrollView>

</FrameLayout>