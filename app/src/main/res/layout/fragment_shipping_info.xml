                android:id="@+id/general_para"
                android:textColor="@color/black"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="Subject to stock availability. We try to maintain accurate stock counts on our website but from time-to-time there may be a stock discrepancy and we will not be able to fulfil all your items at time of purchase. In this instance, we will fulfil the available products to you, and contact you about whether you would prefer to await restocking of the backordered item or if you would prefer for us to process a refund."
                android:layout_below="@id/general_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>


            <TextView
                android:textColor="#a56600"
                android:layout_marginTop="30dp"
                android:paddingLeft="8dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/shippingCost_title"
                android:layout_below="@id/general_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Shipping Costs"/>

            <TextView
                android:id="@+id/shippingCost_para"
                android:textColor="@color/black"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="Shipping costs are calculated during checkout based on weight, dimensions and destination of the items in the order. Payment for shipping will be collected with the purchase.\n\nThis price will be the final price for shipping cost to the customer."
                android:layout_below="@id/shippingCost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"/>


            <TextView
                android:layout_marginTop="30dp"
                android:textColor="#a56600"
                android:paddingLeft="8dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/returns_title"
                android:layout_below="@id/shippingCost_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Returns"/>

            <TextView
                android:id="@+id/returns_3.1_title"
                android:textColor="#a56600"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="3.1 Return Due To Change Of Mind"
                android:layout_below="@id/returns_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/returns_3.1_para"
                android:textColor="@color/black"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="ZILOE will happily accept returns due to change of mind as long as a request to return is received by us within 14 days of receipt of item and are returned to us in original packaging, unused and in resellable condition.\n\nReturn shipping will be paid at the customers expense and will be required to arrange their own shipping.\n\nOnce returns are received and accepted, refunds will be processed to store credit for a future purchase. We will notify you once this has been completed through email.\n\n(ZILOE) will refund the value of the goods returned but will NOT refund the value of any shipping paid."
                android:layout_below="@id/returns_3.1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"/>



