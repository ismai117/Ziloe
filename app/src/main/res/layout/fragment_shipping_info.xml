                android:textColor="@color/black"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:text="ZILOE will happily honour any valid warranty claims, provided a claim is submitted within 90 days of receipt of items.\n\nCustomers will be required to pre-pay the return shipping, however we will reimburse you upon successful warranty claim.\n\nUpon return receipt of items for warranty claim, you can expect ZILOE to process your warranty claim within 7 days.\n\nOnce warranty claim is confirmed, you will receive the choice of:\n\n(a) refund to your payment method\n\n(b) a refund in store credit\n\n(c) a replacement item sent to you (if stock is available)"
                android:layout_below="@id/returns_3.2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>


            <TextView
                android:layout_marginTop="30dp"
                android:textColor="#a56600"
                android:paddingLeft="8dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/deliveryTerms_title"
                android:layout_below="@id/returns_3.2_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Delivery Terms"/>

            <TextView
                android:id="@+id/deliveryTerms_4.1_title"
                android:textColor="#a56600"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
