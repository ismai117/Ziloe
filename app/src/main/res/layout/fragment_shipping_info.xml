<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#ffffff"
    tools:context=".view.fragments.shippingInfo.ShippingInfo_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <TextView
                android:textColor="@color/black"
                android:id="@+id/shipping_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Shipping Info"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/line_mark"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_below="@id/shipping_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#000000" />


            <TextView
                android:id="@+id/shippinginfo_p1"
                android:textColor="@color/black"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="By placing an order through this Website you will be agreeing to the terms below. These are provided to ensure both parties are aware of and agree upon this arrangement to mutually protect and set expectations on our service."
