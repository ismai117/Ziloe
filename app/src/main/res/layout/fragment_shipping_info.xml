                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="If an item is out of stock, we will wait for the item to be available before dispatching your order. Existing items in the order will be reserved while we await this item."
                android:layout_below="@id/deliveryTerms_4.7_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/deliveryTerms_4.8_title"
                android:textColor="#a56600"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
